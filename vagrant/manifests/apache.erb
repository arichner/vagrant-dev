<VirtualHost *:80>
  # Admin email, Server Name (domain name), and any aliases
    ServerAdmin <%= @serveradmin %>
    ServerName  <%= @boxlink %>

  # Index file and Document Root (where the public files are located)
    DirectoryIndex index.html <%= @index %>
    DocumentRoot /vagrant<%= @rootdir %>

  # Log file locations
    LogLevel warn
    ErrorLog  <%= @logsdir %>/error.log
    CustomLog <%= @logsdir %>/access.log combined

  # Directory specifics & VM workarounds
    <Directory /vagrant<%= @rootdir %>>
        AllowOverride All
        Order allow,deny
        Allow from all
        EnableSendfile off
    </Directory>
</VirtualHost>
