require './vagrant/config'
include VConfig

Vagrant.configure('2') do |config|

  # Configure virtualbox to allow $ram-MB memory and symlinks
  config.vm.provider :virtualbox do |vb|
    vb.customize ['modifyvm', :id, '--memory', $ram]
    vb.customize ['setextradata', :id, 'VBoxInternal2/SharedFoldersEnableSymlinksCreate/v-root', '1']
  end

  # Use Ubuntu LTS 12.04 x32
  config.vm.box = 'precise32'
  config.vm.box_url = 'http://files.vagrantup.com/precise32.box'

  # Set up network for HTTP/HTTPS and MySQL
  if $rails == 1
    config.vm.network :forwarded_port, guest: 3000, host: $port
  else
    config.vm.network :forwarded_port, guest: 80, host: $port
  end

  config.vm.network :forwarded_port, guest: 443, host: 8443

  if $database != '' # If database is set.
    config.vm.network :forwarded_port, guest: 3306, host: 3306
  end
  if $mailcatcher == 1 # If MailCatcher is requested.
    config.vm.network :forwarded_port, guest: 1080, host: 1080
  end
  if $memcache == 1 # If Memcache will be installed.
    config.vm.network :forwarded_port, guest: 11211, host: 11211
  end

  config.vm.synced_folder '.', '/vagrant', owner: 'www-data', group: 'www-data', :mount_options => ['dmode=777,fmode=777']

  # Load up all the modules
  config.vm.provision :puppet do |puppet|
    puppet.manifests_path = 'vagrant/manifests'
    puppet.manifest_file = 'default.pp'
    puppet.module_path = 'vagrant/modules'

    # Pass the variables through!
    puppet.facter = {
        :box_link => $box_link,
        :box_ip => $box_ip,
        :composer => $composer,
        :database => $database,
        :db_password => $db_password,
        :home => $home,
        :index => $index,
        :install_ruby => $install_ruby,
        :logs_dir => $logs_dir,
        :mailcatcher => $mailcatcher,
        :memcache => $memcache,
        :newest_php => $newest_php,
        :rails => $rails,
        :rails_ver => $rails_ver,
        :ram => $ram,
        :ruby_version => $ruby_version,
        :root_dir => $root_dir,
        :sendmail => $sendmail,
        :server_admin => $server_admin,
        :service => $service,
        :sudo => $sudo,
    }
  end
end
