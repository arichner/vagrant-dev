{
    "name": "nginx",
    "description": "Basic setup of Nginx with PHP, PHP-FPM and MySQL included",

    "chef_type": "role",
    "json_class": "Chef::Role",

    "override_attributes": {
        "nginx": {
            "doc_dir": "/vagrant/web",
            "log_dir": "/vagrant/logs",
            "contact": "jamie@jamiehurst.co.uk"
        },
        "mysql": {
            "allow_remote_root": true,
            "server_root_password": "root"
        }
    },

    "run_list": [
        "recipe[apt]",
        "recipe[mysql::server]",
        "recipe[nginx]",
        "recipe[php]",
        "recipe[php::module_mysql]",
        "recipe[php::module_curl]",
        "recipe[php::module_gd]",
        "recipe[php-fpm]"
    ]

}